<form action="/comparison" method="get">
  <div id="combatants">
    <div id="player-one" class="player">
      <div class="title">Player One</div>
      <input type="text" name="user_1" placeholder="@dmosher" value="<%= params[:user_1] %>">
    </div>
    <img src="/img/vs.png" class="vs">
    <div id="player-two" class="player">
      <div class="title">Player Two</div>
      <input type="text" name="user_2" placeholder="@searls" value="<%= params[:user_2] %>">
    </div>
  </div>
  <div id="fight">
    <input type="image" src="/img/fight.png">
  </div>
</form>

<div class="actions">
  <a id="sign-out" href='/sign_out'>sign out</a>
</div>